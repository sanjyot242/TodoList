<%- include('header'); -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% if (items.length != 0) { %> <% items.forEach(element => { %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= element._id %> "
        onChange="this.form.submit()"
      />
      <p><%= element.name %></p>
    </div>
  </form>
  <% }) %> <% } %>

  <form action="/" method="POST" class="item">
    <input type="text" name="addedTask" id="addedTask" placeholder="New Item" />
    <button type="submit" name="button" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include('header'); -%>
